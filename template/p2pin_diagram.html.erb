<svg id="pin-diagram" width="1200" style="max-height:95vh;" viewBox="0 0 1500 1800">
<%scss_style do%>
svg#pin-diagram {
    font-family: 'Parallax', monospace;
    font-size: 22px;
    text {
        stroke: none !important;
    }
    text,.bgtext {
        fill: black;
        @media screen and (prefers-color-scheme: dark) {
            fill: white;
        }
    }
    #padring {
        stroke: #E7ECC6;
        stroke-width: 2px;
        fill: #E7ECC680;
    }
    #corelogic {
        stroke: #B7DEE8;
        stroke-width: 2px;
        fill: #B7DEE880;
    }
    #dacchannels {
        font-weight: bold;
        line {
            stroke-width: 6px;
            stroke: black;
            &:hover {
                stroke-width: 12px;
            }
        }
    }
    #dacbus {
        fill: #77933C;
        line {
            stroke-width: 6px;
            stroke: #77933C;
        }
        &:hover line {
            stroke-width: 12px;
        }
    }
}
<%end%>
<text x="750" y="45" style="font-size:40px;font-weight:bold;" text-anchor="middle">Propeller 2 Even & Odd I/O Pin Pair Diagram</text>
<rect id="padring" x="10" y="80" width="740" height="880"/>
<use xlink:href="#padring" y="880"/>
<rect id="corelogic" x="750" y="80" width="740" height="880"/>
<use xlink:href="#corelogic" y="880"/>
<g id="dacchannels">
    <defs>
        <marker id="dacchannels-arrow" markerWidth="5" markerHeight="3.5" 
        refX="0" refY="1.75" orient="auto">
            <polygon points="0 0, 5 1.75, 0 3.5" />
        </marker>
    </defs>
    <svg y="8">
        <text x="1400" y="200">Cog 0</text>
        <text x="1400" y="225">Cog 1</text>
        <text x="1400" y="250">Cog 2</text>
        <text x="1400" y="275">Cog 3</text>
        <text x="1400" y="300">Cog 4</text>
        <text x="1400" y="325">Cog 5</text>
        <text x="1400" y="350">Cog 6</text>
        <text x="1400" y="375">Cog 7</text>
    </svg>
    <line x1="1390" x2="1075" y1="200" y2="200" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="225" y2="225" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="250" y2="250" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="275" y2="275" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="300" y2="300" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="325" y2="325" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="350" y2="350" marker-end="url(#dacchannels-arrow)"/>
    <line x1="1390" x2="1075" y1="375" y2="375" marker-end="url(#dacchannels-arrow)"/>
</g>
<g id="dacbus">
    <defs>
        <marker id="dacbus-arrow" markerWidth="5" markerHeight="3.5" 
        refX="0" refY="1.75" orient="auto">
            <polygon points="0 0, 5 1.75, 0 3.5" />
        </marker>
    </defs>
    <rect x="900" y="180" width="150" height="240"/>
    <text style="fill:white;" text-anchor="middle"><tspan x="975" y="260">DAC bus</tspan><tspan x="975" y="285">select</tspan><tspan x="975" y="335">(%M...M)</tspan></text>
    <line x1="900" x2="100" y1="350" y2="350" marker-end="url(#dacbus-arrow)"/>
</g>
<use xlink:href="#dacbus" y="880"/>
<text x="375" y="120" style="font-size:30px;font-weight:bold;" text-anchor="middle">Custom I/O Pad Ring</text>
<text x="1125" y="120" style="font-size:30px;font-weight:bold;" text-anchor="middle">Synthesized Core Logic</text>
<text style="font-size:30px;font-weight:bold;"><tspan x="28" y="900">Even Pin</tspan><tspan x="20" y="940">(Pins 0,2,4...62)</tspan></text>
<text style="font-size:30px;font-weight:bold;"><tspan x="28" y="1000">Odd Pin</tspan><tspan x="20" y="1040">(Pins 1,3,5...63)</tspan></text>
</svg>